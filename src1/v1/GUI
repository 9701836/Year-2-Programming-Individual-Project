package Bosu;

import java.awt.*;
import java.awt.event.*;
import static java.lang.Math.*;
import javax.swing.*;
import javax.swing.Timer;
import java.awt.geom.*;
import java.util.*;
import java.lang.*;

public class GUI extends JPanel implements ActionListener{
	int choice=0;
	int x;
	int y;
	boolean end=true;
    Note note = new Note(120,0);

 
    public GUI(int choice) {
        setPreferredSize(new Dimension(640, 640));
        setBackground(Color.white);
        this.choice=choice;
        
    }
    
    void SongGUI(Graphics2D g) {
    	g.setStroke(new BasicStroke(2));
    	g.setColor(Color.black);
    	
    	for (int i = 120; i <= 520; i=i+100) {
    	Line2D.Double line = new Line2D.Double(i,0,i,640);
    	g.draw(line);
    	}
    	Line2D.Double line = new Line2D.Double(0,540,640,540);   
    	g.draw(line);
    }
    
    @Override
    public void paintComponent(Graphics gg){
      super.paintComponent(gg);
      Graphics2D g = (Graphics2D) gg;
      g.setRenderingHint(RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON);

      if (choice==1) {
    	  SongGUI(g);
          Button b = new Button("asdf");
          b.setBounds(50,50,50,30);
          add(b);
          note.paint(gg);
          b.addActionListener(this);          
          Timer timer = new Timer(40,this);
          timer.setRepeats(end);
          if (note.getY()==540) {
        	  end=false;
          }
          timer.start();
          
      }
    }

    @Override
	public void actionPerformed(ActionEvent e) {
		note.moveNote();
		note.repaint();
		
	}
}
